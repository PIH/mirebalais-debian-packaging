#!/bin/sh

set -e

case "$1" in
    install)
        service tomcat6 stop
    ;;

    upgrade)
        service tomcat6 stop
        rm -rf /usr/local/tomcat6/webapps/mirebalais/
    ;;

    abort-upgrade)
        service tomcat6 start
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0;
